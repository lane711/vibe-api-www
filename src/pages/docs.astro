---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Documentation - VibeCast">
  <Header />
  
  <!-- Hero Section -->
  <section class="pt-32 pb-20 px-6">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">
        <span class="gradient-text">Documentation</span>
      </h1>
      <p class="text-xl text-gray-300 mb-8 max-w-3xl mx-auto">
        Everything you need to build, deploy, and scale APIs with VibeCast
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/docs/getting-started" 
           class="px-8 py-4 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-semibold">
          Quick Start
        </a>
        <a href="/docs/api" 
           class="px-8 py-4 glass-effect text-white rounded-lg hover:bg-white/10 transition-colors font-semibold">
          API Reference
        </a>
      </div>
    </div>
  </section>

  <!-- Documentation Grid -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <!-- Getting Started -->
        <div class="glass-effect p-8 rounded-xl hover:bg-white/5 transition-colors">
          <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">Getting Started</h3>
          <p class="text-gray-300 mb-6">Learn the basics and build your first API in minutes</p>
          <ul class="space-y-3 text-gray-300">
            <li><a href="/docs/installation" class="hover:text-white transition-colors">Installation</a></li>
            <li><a href="/docs/quick-start" class="hover:text-white transition-colors">Quick Start Guide</a></li>
            <li><a href="/docs/project-structure" class="hover:text-white transition-colors">Project Structure</a></li>
            <li><a href="/docs/deployment" class="hover:text-white transition-colors">Deployment</a></li>
          </ul>
        </div>

        <!-- Core Concepts -->
        <div class="glass-effect p-8 rounded-xl hover:bg-white/5 transition-colors">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-cyan-600 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">Core Concepts</h3>
          <p class="text-gray-300 mb-6">Understand VibeCast's architecture and key concepts</p>
          <ul class="space-y-3 text-gray-300">
            <li><a href="/docs/schemas" class="hover:text-white transition-colors">Schemas & Models</a></li>
            <li><a href="/docs/plugins" class="hover:text-white transition-colors">Plugin System</a></li>
            <li><a href="/docs/tenants" class="hover:text-white transition-colors">Multi-Tenancy</a></li>
            <li><a href="/docs/hooks" class="hover:text-white transition-colors">Hooks & Events</a></li>
          </ul>
        </div>

        <!-- API Reference -->
        <div class="glass-effect p-8 rounded-xl hover:bg-white/5 transition-colors">
          <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-600 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">API Reference</h3>
          <p class="text-gray-300 mb-6">Complete reference for all APIs and methods</p>
          <ul class="space-y-3 text-gray-300">
            <li><a href="/docs/api/rest" class="hover:text-white transition-colors">REST API</a></li>
            <li><a href="/docs/api/graphql" class="hover:text-white transition-colors">GraphQL API</a></li>
            <li><a href="/docs/api/realtime" class="hover:text-white transition-colors">Real-time API</a></li>
            <li><a href="/docs/api/admin" class="hover:text-white transition-colors">Admin API</a></li>
          </ul>
        </div>

        <!-- Plugin Development -->
        <div class="glass-effect p-8 rounded-xl hover:bg-white/5 transition-colors">
          <div class="w-12 h-12 bg-gradient-to-br from-orange-500 to-red-600 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">Plugin Development</h3>
          <p class="text-gray-300 mb-6">Build and publish your own VibeCast plugins</p>
          <ul class="space-y-3 text-gray-300">
            <li><a href="/docs/plugins/creating" class="hover:text-white transition-colors">Creating Plugins</a></li>
            <li><a href="/docs/plugins/api" class="hover:text-white transition-colors">Plugin API</a></li>
            <li><a href="/docs/plugins/testing" class="hover:text-white transition-colors">Testing Plugins</a></li>
            <li><a href="/docs/plugins/publishing" class="hover:text-white transition-colors">Publishing</a></li>
          </ul>
        </div>

        <!-- Deployment -->
        <div class="glass-effect p-8 rounded-xl hover:bg-white/5 transition-colors">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-blue-600 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">Deployment</h3>
          <p class="text-gray-300 mb-6">Deploy and scale your APIs on Cloudflare Workers</p>
          <ul class="space-y-3 text-gray-300">
            <li><a href="/docs/deploy/cloudflare" class="hover:text-white transition-colors">Cloudflare Workers</a></li>
            <li><a href="/docs/deploy/custom-domains" class="hover:text-white transition-colors">Custom Domains</a></li>
            <li><a href="/docs/deploy/environments" class="hover:text-white transition-colors">Environments</a></li>
            <li><a href="/docs/deploy/monitoring" class="hover:text-white transition-colors">Monitoring</a></li>
          </ul>
        </div>

        <!-- Advanced -->
        <div class="glass-effect p-8 rounded-xl hover:bg-white/5 transition-colors">
          <div class="w-12 h-12 bg-gradient-to-br from-pink-500 to-rose-600 rounded-xl flex items-center justify-center mb-6">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold mb-4">Advanced Topics</h3>
          <p class="text-gray-300 mb-6">Deep dive into advanced VibeCast features</p>
          <ul class="space-y-3 text-gray-300">
            <li><a href="/docs/security" class="hover:text-white transition-colors">Security & Auth</a></li>
            <li><a href="/docs/performance" class="hover:text-white transition-colors">Performance</a></li>
            <li><a href="/docs/scaling" class="hover:text-white transition-colors">Scaling</a></li>
            <li><a href="/docs/troubleshooting" class="hover:text-white transition-colors">Troubleshooting</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Guides -->
  <section class="py-20 px-6 bg-gray-900/50">
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold text-center mb-16">Popular Guides</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="glass-effect p-6 rounded-xl">
          <h3 class="text-xl font-bold mb-3">Build a Todo API in 5 Minutes</h3>
          <p class="text-gray-300 mb-4">
            Learn how to create a complete Todo API with authentication, real-time updates, and deployment.
          </p>
          <a href="/docs/guides/todo-api" class="text-primary-400 hover:text-primary-300 font-medium">
            Read Guide →
          </a>
        </div>

        <div class="glass-effect p-6 rounded-xl">
          <h3 class="text-xl font-bold mb-3">Multi-Tenant SaaS Setup</h3>
          <p class="text-gray-300 mb-4">
            Build a multi-tenant SaaS application with VibeCast's tenant isolation features.
          </p>
          <a href="/docs/guides/saas-setup" class="text-primary-400 hover:text-primary-300 font-medium">
            Read Guide →
          </a>
        </div>

        <div class="glass-effect p-6 rounded-xl">
          <h3 class="text-xl font-bold mb-3">Creating Custom Plugins</h3>
          <p class="text-gray-300 mb-4">
            Learn how to build, test, and publish your own VibeCast plugins for the community.
          </p>
          <a href="/docs/guides/custom-plugins" class="text-primary-400 hover:text-primary-300 font-medium">
            Read Guide →
          </a>
        </div>

        <div class="glass-effect p-6 rounded-xl">
          <h3 class="text-xl font-bold mb-3">Production Deployment</h3>
          <p class="text-gray-300 mb-4">
            Best practices for deploying VibeCast APIs to production with monitoring and scaling.
          </p>
          <a href="/docs/guides/production" class="text-primary-400 hover:text-primary-300 font-medium">
            Read Guide →
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Community -->
  <section class="py-20 px-6">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-bold mb-6">Need Help?</h2>
      <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
        Join our community and get help from other VibeCast developers
      </p>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-4xl mx-auto">
        <a href="https://github.com/lane711/vibe-api" target="_blank" 
           class="glass-effect p-6 rounded-xl hover:bg-white/5 transition-colors">
          <svg class="w-8 h-8 text-primary-400 mx-auto mb-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <h3 class="font-bold mb-2">GitHub</h3>
          <p class="text-gray-300 text-sm">Issues, discussions, and source code</p>
        </a>

        <a href="/discord" target="_blank" 
           class="glass-effect p-6 rounded-xl hover:bg-white/5 transition-colors">
          <svg class="w-8 h-8 text-primary-400 mx-auto mb-3" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
          </svg>
          <h3 class="font-bold mb-2">Discord</h3>
          <p class="text-gray-300 text-sm">Chat with the community</p>
        </a>

        <a href="/contact" 
           class="glass-effect p-6 rounded-xl hover:bg-white/5 transition-colors">
          <svg class="w-8 h-8 text-primary-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
          <h3 class="font-bold mb-2">Contact</h3>
          <p class="text-gray-300 text-sm">Get in touch with our team</p>
        </a>
      </div>
    </div>
  </section>

  <Footer />
</Layout>